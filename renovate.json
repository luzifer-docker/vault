{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}custom.latestver{{/if}}",
      "managerFilePatterns": [
        "Dockerfile"
      ],
      "matchStrings": [
        "(:?[A-Z]+_)?VERSION=(?<currentValue>.*?)\\s# renovate: packageName=(?<packageName>.*)(?: datasource=(?<datasource>.+?))?\\s"
      ]
    }
  ],
  "extends": [
    "local>luzifer/renovate-config"
  ]
}